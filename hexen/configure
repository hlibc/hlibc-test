#!/bin/sh

# configure script. 2018 Enzo Magnussun

. ./.config

print()
{
        printf -- "%s\n" "$*"
}
menu()
{
	print "${projectname}     ${copyright}

		${description}

	--prefix=PREFIX         main installation prefix [${prefixtype}] 
	"
	exit 0
}

fatal()
{
        (>&2 print "fatal" "$*")
        exit 1
}

prefix="${prefixtype}"

for i in "$@"
do	case "$i" in
		-h|--help)
			menu
			;;
		--prefix=*)
			prefix=${i#*=}
			;;
		*)
			fatal "$i is not a valid option !!"
			;;
	esac
done
print "Creating a config.mak to be sourced by the makefile"
print "..."

print "
# Automatically generated 
prefix = $prefix
libname = $libname
" > config.mak


print "done."


